@model List<CheeseMVC.Models.Menu>

<h3>Menus:</h3>

<ul>
    @foreach (var menu in Model)
    {
        <li>
            <a asp-controller="Menu"
               asp-action="ViewMenu"
               asp-route-id="@menu.ID">@menu.Name</a>
        </li>
    }
</ul>

<p><a asp-controller="Menu" asp-action="Add">Add a menu</a></p>